<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Temp">

    <Button
        android:id="@+id/btn_attemt_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="@string/attempt_quiz"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="86dp" />

    <Button
        android:id="@+id/btn_admin_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_attemt_quiz"
        android:layout_centerHorizontal="true"
        android:text="@string/admin_quiz"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/id_add_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add quiz"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btn_attemt_quiz"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>