<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#656464"
    tools:context=".ShowMaterials">

    <TextView
        android:id="@+id/MatID"
        android:layout_width="313dp"
        android:layout_height="82dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:text="@string/ShowMatShow"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="414dp"
        android:layout_height="0dp"
        android:background="#D5FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MatID" />

    <ImageView
        android:id="@+id/image_delete"
        android:layout_width="29dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="TODO"
        android:src="@drawable/ic_delete_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/MatID"
        app:layout_constraintStart_toEndOf="@+id/MatID"
        tools:ignore="MissingConstraints"></ImageView>

    <ImageView
        android:id="@+id/image_edit"
        android:layout_width="29dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:contentDescription="TODO"
        android:src="@drawable/ic_edit_black_24dp"
        app:layout_constraintStart_toEndOf="@+id/MatID"
        app:layout_constraintTop_toTopOf="@+id/MatID"
        tools:ignore="MissingConstraints"></ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>